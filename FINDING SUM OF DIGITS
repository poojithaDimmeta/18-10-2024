#include<stdio.h>
int pow(int n,int m);
int result=0;
int sumofdigits(int n)
{
 
 while(n==0)
 {
     return result;}
     result=result+n%10;
 sumofdigits(n/10);
 
 return result;
}
int main()
{
    int p;
    printf("enter the number\n");
    scanf("%d",&p);
    printf("the sum of digits of %d is %d\n",p,sumofdigits(p));
    return 0;
}
